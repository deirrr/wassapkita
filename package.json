{
  "name": "wassapkita",
  "version": "0.1.0",
  "description": "An open-source desktop application for WhatsApp automation based on WhatsApp Web. Built with Electron, Node.js, and Vue.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.wassapkita.app",
    "productName": "Wassapkita",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "renderer/**/*",
      "assets/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "asarUnpack": [
      "node_modules/puppeteer/.local-chromium/**",
      "node_modules/puppeteer/.local-chromium-win32/**",
      "node_modules/puppeteer/.local-chromium-win64/**"
    ]
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "exceljs": "^4.4.0",
    "puppeteer": "^24.33.0",
    "qrcode": "^1.5.4",
    "whatsapp-web.js": "github:pedroslopez/whatsapp-web.js#5438c2042b9b42370c0acef21e511c08bb462983"
  }
}
